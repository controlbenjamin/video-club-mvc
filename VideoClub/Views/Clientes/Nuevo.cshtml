@model VideoClub.Models.ClientesViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo Cliente</h2>

@using (Html.BeginForm("Crear", "Clientes"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.Nombre, "Nombre:")
        @Html.TextBoxFor(m => m.Cliente.Nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.FechaNacimiento)
        @Html.TextBoxFor(m => m.Cliente.FechaNacimiento, new { @class = "form-control" })
    </div>


    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Cliente.EstaSuscritoNoticias) Está suscripto a las noticias?
        </label>

    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Cliente.TipoMembresiaId, "Tipo de membresía:")
        @Html.DropDownListFor(m => m.Cliente.TipoMembresiaId,
       new SelectList(Model.TipoMembresias, "Id", "Nombre"),
       "Seleccione tipo de membresía",
       new { @class = "form-control" })
    </div>


}

